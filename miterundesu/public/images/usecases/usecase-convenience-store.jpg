<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300" fill="none">
  <!-- Background -->
  <rect width="400" height="300" fill="#F5F5F5"/>

  <!-- Shelf -->
  <rect x="50" y="80" width="300" height="150" fill="#E0E0E0" stroke="#999" stroke-width="2"/>

  <!-- Products on shelf -->
  <rect x="70" y="100" width="40" height="60" rx="5" fill="#438247" opacity="0.3"/>
  <rect x="120" y="100" width="40" height="60" rx="5" fill="#438247" opacity="0.3"/>
  <rect x="170" y="100" width="40" height="60" rx="5" fill="#438247" opacity="0.3"/>
  <rect x="220" y="100" width="40" height="60" rx="5" fill="#438247" opacity="0.3"/>
  <rect x="270" y="100" width="40" height="60" rx="5" fill="#438247" opacity="0.3"/>

  <!-- Person with white cane (simplified) -->
  <circle cx="200" cy="200" r="15" fill="#666"/>
  <rect x="193" y="215" width="14" height="50" rx="3" fill="#666"/>

  <!-- White cane -->
  <line x1="185" y1="230" x2="160" y2="280" stroke="#333" stroke-width="3" stroke-linecap="round"/>

  <!-- Phone in hand -->
  <rect x="210" y="220" width="20" height="35" rx="3" fill="#333" stroke="#438247" stroke-width="2"/>

  <!-- Signal lines from phone to product -->
  <path d="M 220 225 Q 180 180, 150 130" stroke="#438247" stroke-width="2" stroke-dasharray="5,5" opacity="0.7"/>

  <!-- Text label -->
  <text x="200" y="40" font-family="Arial, sans-serif" font-size="16" fill="#438247" text-anchor="middle" font-weight="bold">
    コンビニでおにぎりを拡大中
  </text>
</svg>
