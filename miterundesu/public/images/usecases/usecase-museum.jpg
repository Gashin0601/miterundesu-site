<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 300" fill="none">
  <!-- Background -->
  <rect width="400" height="300" fill="#F8F8F8"/>

  <!-- Wall -->
  <rect x="0" y="0" width="400" height="220" fill="#E8E8E8"/>

  <!-- Floor -->
  <rect x="0" y="220" width="400" height="80" fill="#D0D0D0"/>

  <!-- Picture frame on wall -->
  <rect x="100" y="40" width="200" height="150" fill="#FFF" stroke="#8B4513" stroke-width="8"/>

  <!-- Artwork inside frame (abstract) -->
  <rect x="120" y="60" width="160" height="110" fill="#FFE4B5"/>
  <circle cx="160" cy="100" r="20" fill="#FFD700" opacity="0.6"/>
  <circle cx="240" cy="120" r="25" fill="#FF6347" opacity="0.6"/>
  <rect x="180" y="140" width="60" height="20" fill="#4682B4" opacity="0.6"/>

  <!-- Elderly person (with glasses) -->
  <circle cx="300" cy="200" r="15" fill="#666"/>

  <!-- Glasses -->
  <circle cx="295" cy="200" r="4" fill="none" stroke="#333" stroke-width="1.5"/>
  <circle cx="305" cy="200" r="4" fill="none" stroke="#333" stroke-width="1.5"/>
  <line x1="299" y1="200" x2="301" y2="200" stroke="#333" stroke-width="1.5"/>

  <!-- Body -->
  <rect x="293" y="215" width="14" height="45" rx="3" fill="#666"/>

  <!-- Phone in hand -->
  <rect x="270" y="225" width="18" height="32" rx="3" fill="#333" stroke="#438247" stroke-width="2"/>

  <!-- Signal lines from phone to artwork -->
  <path d="M 275 230 Q 220 180, 200 100" stroke="#438247" stroke-width="2" stroke-dasharray="5,5" opacity="0.7"/>

  <!-- "No Photo" sign crossed out -->
  <g opacity="0.5">
    <circle cx="50" cy="50" r="20" fill="none" stroke="#DC143C" stroke-width="3"/>
    <path d="M 40 40 L 60 60" stroke="#DC143C" stroke-width="3"/>
    <rect x="42" y="45" width="8" height="10" rx="1" fill="#DC143C"/>
  </g>

  <!-- Text label -->
  <text x="200" y="25" font-family="Arial, sans-serif" font-size="16" fill="#438247" text-anchor="middle" font-weight="bold">
    美術館で作品をアプリで鑑賞
  </text>
</svg>
