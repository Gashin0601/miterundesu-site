<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 375 812" fill="none">
  <!-- iPhone mockup -->
  <!-- Background -->
  <rect width="375" height="812" fill="#F5F5F5" rx="40"/>

  <!-- Status bar -->
  <rect width="375" height="44" fill="#FFFFFF"/>
  <text x="20" y="30" font-family="Arial, sans-serif" font-size="14" fill="#000000">9:41</text>

  <!-- Navigation bar -->
  <rect y="44" width="375" height="44" fill="#FFFFFF"/>
  <text x="50" y="75" font-family="Arial, sans-serif" font-size="17" fill="#007AFF">＜ 戻る</text>
  <text x="187.5" y="75" font-family="Arial, sans-serif" font-size="17" font-weight="600" fill="#000000" text-anchor="middle">プレスモード</text>

  <!-- Content area -->
  <rect y="88" width="375" height="724" fill="#F5F5F5"/>

  <!-- Header -->
  <text x="187.5" y="150" font-family="Arial, sans-serif" font-size="20" font-weight="600" fill="#000000" text-anchor="middle">コードを入力</text>
  <text x="187.5" y="180" font-family="Arial, sans-serif" font-size="14" fill="#666666" text-anchor="middle">担当者からお送りしたコードを</text>
  <text x="187.5" y="200" font-family="Arial, sans-serif" font-size="14" fill="#666666" text-anchor="middle">入力してください</text>

  <!-- Code input boxes -->
  <rect x="50" y="240" width="50" height="60" rx="8" fill="#FFFFFF" stroke="#438247" stroke-width="2"/>
  <text x="75" y="280" font-family="Courier, monospace" font-size="32" fill="#438247" text-anchor="middle">A</text>

  <rect x="110" y="240" width="50" height="60" rx="8" fill="#FFFFFF" stroke="#438247" stroke-width="2"/>
  <text x="135" y="280" font-family="Courier, monospace" font-size="32" fill="#438247" text-anchor="middle">B</text>

  <rect x="170" y="240" width="50" height="60" rx="8" fill="#FFFFFF" stroke="#438247" stroke-width="2"/>
  <text x="195" y="280" font-family="Courier, monospace" font-size="32" fill="#438247" text-anchor="middle">C</text>

  <rect x="230" y="240" width="50" height="60" rx="8" fill="#FFFFFF" stroke="#CCCCCC" stroke-width="2"/>
  <rect x="245" y="265" width="2" height="30" fill="#438247">
    <animate attributeName="opacity" values="1;0;1" dur="1s" repeatCount="indefinite"/>
  </rect>

  <rect x="290" y="240" width="50" height="60" rx="8" fill="#FFFFFF" stroke="#CCCCCC" stroke-width="2"/>

  <!-- Info text -->
  <text x="187.5" y="340" font-family="Arial, sans-serif" font-size="13" fill="#999999" text-anchor="middle">5桁のコードを入力してください</text>

  <!-- Confirm button -->
  <rect x="50" y="400" width="275" height="50" rx="25" fill="#438247"/>
  <text x="187.5" y="432" font-family="Arial, sans-serif" font-size="17" font-weight="600" fill="#FFFFFF" text-anchor="middle">確認</text>

  <!-- Label at bottom -->
  <text x="187.5" y="780" font-family="Arial, sans-serif" font-size="12" fill="#999999" text-anchor="middle">コード入力画面</text>
</svg>
