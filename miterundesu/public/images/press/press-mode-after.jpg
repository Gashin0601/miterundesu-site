<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 375 812" fill="none">
  <!-- iPhone mockup -->
  <!-- Background -->
  <rect width="375" height="812" fill="#F5F5F5" rx="40"/>

  <!-- Status bar -->
  <rect width="375" height="44" fill="#FFFFFF"/>
  <text x="20" y="30" font-family="Arial, sans-serif" font-size="14" fill="#000000">9:41</text>

  <!-- Navigation bar -->
  <rect y="44" width="375" height="44" fill="#FFFFFF"/>
  <text x="187.5" y="75" font-family="Arial, sans-serif" font-size="17" font-weight="600" fill="#000000" text-anchor="middle">設定</text>

  <!-- Content area -->
  <rect y="88" width="375" height="724" fill="#F5F5F5"/>

  <!-- Settings list -->
  <!-- Press Mode Setting (ON) -->
  <rect y="120" width="375" height="60" fill="#FFFFFF"/>
  <text x="20" y="155" font-family="Arial, sans-serif" font-size="16" fill="#000000">プレスモード</text>
  <circle cx="330" cy="150" r="15" fill="#438247"/>
  <circle cx="337" cy="150" r="12" fill="#FFFFFF"/>

  <!-- Status banner -->
  <rect y="190" width="375" height="80" fill="#E8F5E9"/>
  <circle cx="40" cy="230" r="4" fill="#438247">
    <animate attributeName="r" values="4;6;4" dur="1.5s" repeatCount="indefinite"/>
    <animate attributeName="opacity" values="1;0.5;1" dur="1.5s" repeatCount="indefinite"/>
  </circle>
  <text x="60" y="220" font-family="Arial, sans-serif" font-size="15" font-weight="600" fill="#2E7D32">プレスモード有効</text>
  <text x="60" y="240" font-family="Arial, sans-serif" font-size="13" fill="#438247">2024年12月31日まで</text>
  <text x="60" y="255" font-family="Arial, sans-serif" font-size="12" fill="#666666">スクリーンショット・画面収録が可能です</text>

  <!-- Info section -->
  <rect y="290" width="375" height="180" fill="#FFFFFF"/>
  <text x="20" y="320" font-family="Arial, sans-serif" font-size="15" font-weight="600" fill="#438247">プレスモードについて</text>
  <text x="20" y="350" font-family="Arial, sans-serif" font-size="13" fill="#666666">このモードでは、取材・紹介のために</text>
  <text x="20" y="370" font-family="Arial, sans-serif" font-size="13" fill="#666666">一時的にスクリーンショットと</text>
  <text x="20" y="390" font-family="Arial, sans-serif" font-size="13" fill="#666666">画面収録が許可されています。</text>
  <text x="20" y="420" font-family="Arial, sans-serif" font-size="13" fill="#666666">有効期間が終了すると、自動的に</text>
  <text x="20" y="440" font-family="Arial, sans-serif" font-size="13" fill="#666666">通常モードに戻ります。</text>

  <!-- Deactivate button -->
  <rect y="490" width="375" height="50" fill="#FFFFFF"/>
  <text x="187.5" y="520" font-family="Arial, sans-serif" font-size="16" fill="#FF3B30" text-anchor="middle">プレスモードを無効化</text>

  <!-- Label at bottom -->
  <text x="187.5" y="780" font-family="Arial, sans-serif" font-size="12" fill="#999999" text-anchor="middle">有効化後の画面</text>
</svg>
