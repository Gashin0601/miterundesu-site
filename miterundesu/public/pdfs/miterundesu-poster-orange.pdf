<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 400 600" fill="none">
  <!-- Background -->
  <rect width="400" height="600" fill="#E97B2A"/>

  <!-- White border -->
  <rect x="20" y="20" width="360" height="560" fill="none" stroke="white" stroke-width="4"/>

  <!-- App Icon Circle -->
  <circle cx="200" cy="120" r="50" fill="white"/>
  <text x="200" y="135" font-family="Arial, sans-serif" font-size="48" font-weight="bold" fill="#E97B2A" text-anchor="middle">見</text>

  <!-- App Name -->
  <text x="200" y="210" font-family="Arial, sans-serif" font-size="32" font-weight="bold" fill="white" text-anchor="middle">ミテルンデス</text>

  <!-- Theater Mode Badge -->
  <rect x="100" y="235" width="200" height="40" rx="20" fill="white"/>
  <text x="200" y="262" font-family="Arial, sans-serif" font-size="20" font-weight="bold" fill="#E97B2A" text-anchor="middle">シアターモード</text>

  <!-- Main Message -->
  <text x="200" y="315" font-family="Arial, sans-serif" font-size="24" fill="white" text-anchor="middle">この施設では</text>
  <text x="200" y="350" font-family="Arial, sans-serif" font-size="28" font-weight="bold" fill="white" text-anchor="middle">見るための</text>
  <text x="200" y="385" font-family="Arial, sans-serif" font-size="28" font-weight="bold" fill="white" text-anchor="middle">カメラアプリが</text>
  <text x="200" y="420" font-family="Arial, sans-serif" font-size="28" font-weight="bold" fill="white" text-anchor="middle">使えます</text>

  <!-- Phone Icon -->
  <rect x="160" y="455" width="80" height="120" rx="10" fill="none" stroke="white" stroke-width="3"/>
  <circle cx="200" cy="560" r="8" fill="white"/>

  <!-- Camera prohibition icon -->
  <circle cx="80" y="500" r="25" fill="none" stroke="white" stroke-width="3"/>
  <rect x="70" y="495" width="20" height="10" rx="2" fill="none" stroke="white" stroke-width="2"/>
  <line x1="60" y1="520" x2="100" y2="480" stroke="white" stroke-width="3"/>

  <circle cx="320" cy="500" r="25" fill="none" stroke="white" stroke-width="3"/>
  <rect x="310" y="495" width="20" height="10" rx="2" fill="none" stroke="white" stroke-width="2"/>
  <line x1="300" y1="520" x2="340" y2="480" stroke="white" stroke-width="3"/>
</svg>
