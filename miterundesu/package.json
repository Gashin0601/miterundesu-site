{
  "name": "miterundesu-site",
  "version": "1.0.0",
  "description": "Official website for Miterundesu iOS app",
  "main": "dist/server.js",
  "scripts": {
    "build:backend": "tsc",
    "build:frontend": "node build-frontend.js",
    "build": "npm run build:backend && npm run build:frontend",
    "vercel-build": "npm run build",
    "start": "node dist/server.js",
    "dev:backend": "nodemon --watch src --exec ts-node src/server.ts",
    "dev:frontend": "tsc --project tsconfig.frontend.json --watch",
    "dev": "npm run dev:backend",
    "clean": "rm -rf dist public/js/*.js public/js/*.map",
    "rebuild": "npm run clean && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gashin0601/miterundesu-site.git"
  },
  "keywords": [
    "miterundesu",
    "accessibility",
    "camera",
    "app"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Gashin0601/miterundesu-site/issues"
  },
  "homepage": "https://github.com/Gashin0601/miterundesu-site#readme",
  "devDependencies": {
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "esbuild": "^0.27.0",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.81.1",
    "bcryptjs": "^3.0.3",
    "body-scroll-lock-upgrade": "^1.1.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "resend": "^6.4.2"
  }
}
